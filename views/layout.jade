doctype html
html(ng-app="myApp")
    head
        title= title
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name='author',content='qora')
        meta(name='keywords',content='qora,bitcoin,btc,qora blog')
        meta(name='application-name',content="")
        base(href='/')
        link(rel='stylesheet',href='/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet',href='/css/app.css')
        link(rel="stylesheet" href="/editor.md/css/editormd.min.css")
        block head
    body(data-spy='scroll', data-target='.bs-navbar-scrollspy')
        block mynav
            div#mynav.navbar.navbar-default.navbar-fixed-top(role='navigation')
                div.container-fluid
                    div.navbar-header
                        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href='/')
                            img(src='/images/foryou.png')

                    div.collapse.navbar-collapse
                        ul.nav.navbar-nav
                            li
                                a(href='/') Home
                            li
                                a(href='/myPosts') Blog
                            li
                                a(href='/addPost') Add
                        ul.nav.navbar-nav.navbar-right
                            li
                                a(href='/About') About
                            li
                                a(href='/login') Sign in
                            if(user)
                                li
                                    a(href='/manage') Manage

                                li
                                    a(href='/post') Post Blog
                                li
                                    a(href='/postcover') Post Cover
                                li
                                    a(href='/logout') Log out
        div(ng-view)
            block content
        block footer
            div.footer
                .container-fluid
                    .container
                        .row
                            .col-md-12
                                ul.list-inline
                                    li
                                        a(href='http://weibo.com/u/3199605414')
                                            i.fa.fa-weibo
                                    li
                                        a(href='https://github.com/2014lh/foryou')
                                            i.fa.fa-github

                            .col-md-12
                                ul.list-inline
                                    li  Power By &nbsp;
                                        a(href='http://nodejs.org') Node.js
                                    li  Host By &nbsp;
                                        a() DigitalOcean

                                    li  2016, &nbsp;  &copy; By &nbsp;
                                        a(href='https://github.com/2014lh/foryou') liuheng


        script(src='/jquery/dist/jquery.min.js')
        script(src='/jquery/dist/jquery.scrollUp.min.js')
        script(src='/bootstrap/dist/js/bootstrap.min.js')
        script(src='angular/angular.js')
        script(src='angular-route/angular-route.min.js')
        script(src='js/app.js')
        script(src='js/services.js')
        script(src='js/controllers.js')
        script(src='js/filters.js')
        script(src='js/directives.js')
        script.
            $(function () {
                $.scrollUp({
                    scrollName: 'scrollUp', // Element ID
                    topDistance: '300', // Distance from top before showing element (px)
                    topSpeed: 300, // Speed back to top (ms)
                    animation: 'fade', // Fade, slide, none
                    animationInSpeed: 200, // Animation in speed (ms)
                    animationOutSpeed: 200, // Animation out speed (ms)
                    scrollText: 'Top', // Text for element
                    activeOverlay: false // Set CSS color to display scrollUp active point, e.g '#00FFFF'
                });
            });
            (function(){
                if(!(!window.attachEvent && !window.opera)){
                    h = document.documentElement.clientHeight;
                    w = document.documentElement.clientWidth;
                }else{
                    h = window.innerHeight;
                    w = window.innerWidth;
                }
                if(document.getElementById("pageIndex")){
                    var homepage=document.getElementById("pageIndex");
                    homepage.style.height=(h)+"px";
                }else{}
            })();
        block scripts
